<Page x:Class="Hotel.Pages.ClientBookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Hotel.Pages"
      xmlns:controls="clr-namespace:Hotel.Controls"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Оформление бронирования (Клиент)"
      Style="{StaticResource PageStyle}">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
                <Label Content="Дата въезда" Style="{StaticResource LblStyle}"/>
                <DatePicker x:Name="dpFrom" SelectedDateChanged="dpFrom_SelectedDateChanged"
                            Style="{StaticResource DatePickerStyle}" Margin="0,0,0,10"/>
                <Label Content="Дата выселения" Style="{StaticResource LblStyle}"/>
                <DatePicker x:Name="dpTill" SelectedDateChanged="dpTill_SelectedDateChanged"
                            Style="{StaticResource DatePickerStyle}" Margin="0,0,0,10"/>

                <Label Content="Доступные номера" Style="{StaticResource LblStyle}"/>
                <ComboBox x:Name="cmbRoom" SelectedValuePath="id" DisplayMemberPath="displayInfo" 
                          MinWidth="200" Margin="0,0,0,10" SelectionChanged="cmbRoom_SelectionChanged"/>

                <Label Content="Стоимость проживания" Style="{StaticResource LblStyle}"/>
                <Label x:Name="lblAmount" Style="{StaticResource LblStyle}" Margin="0,0,0,10"/>

                <Label Content="Дополнительные услуги" Style="{StaticResource LblStyle}"/>
                <ListView x:Name="lvServices" SelectionMode="Multiple" MinWidth="300" MaxWidth="600" MaxHeight="250" Margin="0,0,0,10">
                    <ListView.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Услуга" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Service.name}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Кол-во" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <controls:NumericUpDown Value="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button x:Name="btnBook" Content="Забронировать" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="btnBook_Click" Style="{StaticResource CustomButtonStyle}" Margin="0,0,0,10"/>
                <Button x:Name="btnBack" Content="Назад" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="btnBack_Click" Style="{StaticResource CustomButtonStyle}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>