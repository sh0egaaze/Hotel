<Page x:Class="Hotel.Pages.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница управления бронированием" 
      Style="{StaticResource PageStyle}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="Посетитель" Style="{StaticResource LblStyle}" />
            <ComboBox x:Name="cmbClient" SelectedValuePath="id" DisplayMemberPath="fullName" MinWidth="200"/>

            <Label Content="Номер"  Style="{StaticResource LblStyle}"/>
            <ComboBox x:Name="cmbRoom" SelectedValuePath="id" DisplayMemberPath="number" SelectionChanged="cmbRoom_SelectionChanged" MinWidth="200"/>

            <Label Content="Дата въезда"  Style="{StaticResource LblStyle}"/>
            <DatePicker x:Name="dpFrom" SelectedDateChanged="dpFrom_SelectedDateChanged" 
                        Style="{StaticResource DatePickerStyle}" />

            <Label Content="Дата выселения"  Style="{StaticResource LblStyle}" />
            <DatePicker x:Name="dpTill" SelectedDateChanged="dpTill_SelectedDateChanged" 
                       Style="{StaticResource DatePickerStyle}" />

            <Label Content="Стоимость проживания"  Style="{StaticResource LblStyle}" />
            <Label x:Name="lblAmount"  Style="{StaticResource LblStyle}" />

            <Button x:Name="btnSave" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnSave_Click"
                     Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>